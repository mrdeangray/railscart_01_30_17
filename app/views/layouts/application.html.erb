    <%=link_to "Sign In", root_path%>
    <%=link_to "Sign Up", root_path%>
    <%else%>
    <%=link_to "Log Out", root_path%>
    <%end%>
  </div>

    
  </nav>
  
<div class='main'>
  <%= yield %>
</div>

</body>
</html>
